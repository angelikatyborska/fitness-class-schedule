.schedule-header
  .location
    = filter_header
  .filter
    %button{ href: '#', class: 'button tiny secondary dropdown', data: { 'dropdown': 'rooms-dropdown'}}
      = t('room.name')
    %ul{ id: 'rooms-dropdown', class: 'f-dropdown', data: { 'dropdown-content': '' }}
      %li
        = link_to t('shared.all'), schedule_items_path(filter_params.except(:room))
      - rooms.order(:name).each do |room|
        %li
          = link_to room, schedule_items_path(filter_params.merge({ room: room.id }))
    %button{ href: '#', class: 'button tiny secondary dropdown', data: { 'dropdown': 'trainers-dropdown'}}
      = t('trainer.name')
    %ul{ id: 'trainers-dropdown', class: 'f-dropdown', data: { 'dropdown-content': '' }}
      %li
        = link_to t('shared.all'), schedule_items_path(filter_params.except(:trainer))
      - trainers.order(:first_name).each do |trainer|
        %li
          = link_to trainer, schedule_items_path(filter_params.merge({ trainer: trainer.id }))
    = link_to t('schedule_item.prev_week'), schedule_items_path(filter_params.merge({ week_offset: week_offset - 1 })), remote: true, class: 'button tiny secondary time-navigation prev-week'
    = link_to t('schedule_item.this_week'), schedule_items_path(filter_params.merge({ week_offset: 0 })), remote: true, class: 'button tiny secondary time-navigation this-week'
    = link_to t('schedule_item.next_week'), schedule_items_path(filter_params.merge({ week_offset: week_offset + 1 })), remote: true, class: 'button tiny secondary time-navigation next-week'
#schedule
  = render 'schedule_items/schedule_table', schedule_items: schedule_items
