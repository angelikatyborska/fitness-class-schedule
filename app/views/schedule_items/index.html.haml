.schedule-header
  - if user_signed_in? && current_user.admin?
    .buttons
      = link_to t('shared.create'),
        new_admin_schedule_item_path,
        class: 'button action create',
        title: t('shared.create')

  .filter
    = render 'schedule_filter_dropdowns'
    = render 'schedule_filter_time_navigation'

#schedule
  = render 'schedule_items/schedule_table', schedule_items: schedule_items

:javascript
  $(document).ready(function() {
    if (#{ !flash[:focus].nil? }) {
      window.location
      $('.page-wrapper').scrollTop($('##{ escape_javascript flash[:focus] }').offset().top - 15);
      $('##{ escape_javascript flash[:focus] }').addClass('highlight');
    }
  });