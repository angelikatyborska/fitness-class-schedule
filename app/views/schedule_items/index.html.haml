%h2
  = room.name
#schedule
  = render 'schedule_items/schedule_table', schedule_items: room.schedule_items

= link_to 'Prev week', prev_week_room_schedule_items_path(room_id: room.id, week_offset: week_offset - 1), remote: true
= link_to 'Next week', next_week_room_schedule_items_path(room_id: room.id, week_offset: week_offset + 1), remote: true