- if current_user.admin?
  %li.has-dropdown.admin-panel
    = link_to '#' do
      = t('user.admin_panel.name')
    %ul.dropdown
      %li
        = link_to t('user.admin_panel.schedule_items'), admin_schedule_items_path
      %li
        = link_to t('fitness_class.name').pluralize, admin_fitness_classes_path
      %li
        = link_to t('trainer.name').pluralize, admin_trainers_path
      %li
        = link_to t('room.name').pluralize, admin_rooms_path
      %li
        = link_to t('user.name').pluralize, admin_users_path
      %li
        = link_to t('user.admin_panel.settings'), edit_admin_site_settings_path