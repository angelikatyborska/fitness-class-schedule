.devise-links
  .row
    - if controller_name != 'sessions'
      .medium-12.columns
        = link_to t('user.login'), new_session_path(resource_name), remote: true
    - if devise_mapping.registerable? && controller_name != 'registrations'
      .medium-12.columns
        = link_to t('user.signup'), new_registration_path(resource_name), remote: true
    - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
      .medium-12.columns
        = link_to t('devise.passwords.forgot'), new_password_path(resource_name), remote: true
    - if devise_mapping.confirmable? && controller_name != 'confirmations'
      .medium-12.columns
        = link_to t('devise.confirmations.didnt_receive_instructions'), new_confirmation_path(resource_name), remote: true
