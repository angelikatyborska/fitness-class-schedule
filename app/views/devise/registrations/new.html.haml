= simple_form_for resource, as: resource_name, url: registration_path(resource_name), remote: true do |f|
  .row
    .medium-12.columns
      = f.error_notification
  .row
    .medium-12.columns
      = f.input :email, required: true, autofocus: true, label: false, placeholder: t('devise.email')
  .row
    .medium-12.columns
      = f.input :password, required: true, hint: (t('devise.passwords.characters_minimum', minimum: @minimum_password_length)), label: false, placeholder: t('devise.password')
  .row
    .medium-12.columns
      = f.input :password_confirmation, required: true, label: false, placeholder: t('devise.password_confirmation')
  .row
    .medium-12.columns
      = f.button :submit, t('user.signup')
= render "devise/shared/links"

