= simple_form_for resource, as: resource_name, url: registration_path(resource_name), remote: remote do |f|
  .form-inputs
    .row
      .medium-6.columns
        = f.input :first_name,
          required: true,
          autofocus: true,
          label: false,
          placeholder: t('user.attributes.first_name')

      .medium-6.columns
        = f.input :last_name,
          required: true,
          label: false,
          placeholder: t('user.attributes.last_name')

    .row
      .medium-12.columns
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fa.fa-envelope-o.fa-fw
          = f.input :email,
            required: true,
            label: false,
            placeholder: t('devise.email'),
            wrapper_html: { class: 'small-10 columns' }

    .row
      .medium-12.columns
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fa.fa-key.fa-fw
          = f.input :password,
            required: true,
            label: false,
            placeholder: t('devise.password'),
            wrapper_html: { class: 'small-10 columns' }

    .row
      .medium-12.columns
        .row.collapse
          .small-2.columns
            %span.prefix
              %i.fa.fa-key.fa-fw
          = f.input :password_confirmation,
            required: true,
            label: false,
            placeholder: t('devise.password_confirmation'),
            wrapper_html: { class: 'small-10 columns' }

  .form-actions
    .row
      .medium-12.columns
        = f.button :submit, t('user.signup')

.row
  .medium-12.columns
    = render 'devise/shared/links'

