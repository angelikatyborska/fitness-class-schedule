.devise-form-stand-alone
  %h3
    = t('user.change_password')

  = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
    .form-inputs
      .row
        .medium-12.columns
          .row.collapse
            .small-2.columns
              %span.prefix
                %i.fa.fa-key.fa-fw
            = f.input :password,
              required: false,
              label: false,
              placeholder: t('devise.password'),
              wrapper_html: { class: 'small-10 columns' }

      .row
        .medium-12.columns
          .row.collapse
            .small-2.columns
              %span.prefix
                %i.fa.fa-key.fa-fw
            = f.input :password_confirmation,
              required: false,
              label: false,
              placeholder: t('devise.password_confirmation'),
              wrapper_html: { class: 'small-10 columns' }

      .row
        .medium-12.columns
          .row.collapse
            .small-2.columns
              %span.prefix
                %i.fa.fa-key.fa-fw
            = f.input :current_password,
              required: true,
              label: false,
              placeholder: t('devise.current_password'),
              wrapper_html: { class: 'small-10 columns' }

    .form-actions
      .row
        .medium-12.columns
          = f.button :submit, t('shared.save')

  .row
    .medium-12.columns
      %p
        Unhappy?
        = link_to t('user.destroy'),
          registration_path(resource_name),
          data: { confirm: t('shared.confirm') },
          method: :delete,
          class: 'text-anchor'
